function [joints,normalized_joints] = load_skeleton( txt )
%LOAD_SKELETON Summary of this function goes here
%   Detailed explanation goes here
fid = fopen(txt);

tline = fgets(fid);

normalized_joints = cell(1);

joints = cell(1);

cnt = 1;
while ischar(tline)
    normalized_joints{cnt} = cell(1);
    joints{cnt} = cell(1);
    joint_str_p1 = textscan(tline,'%f,%f,%f,%f,%f,%f,%f,%f,%f,%f,%f,%f,%f,%f,%f,%f,%f,%f,%f,%f,%f,%f,%f,%f,%f,%f,%f,%f,%f,%f,%f,%f,%f,%f,%f,%f,%f,%f,%f,%f,%f,%f,%f,%f,%f,%f');
    joint_str_p1(1) = [];
    normalized_joints{cnt}{1} = reshape(joint_str_p1,[3,15])';
    joints{cnt}{1} = [1280 - (normalized_joints{cnt}{1}(:,1) .* 2560),
	original_Y = 960 - (normalized_Y .* 1920);
    
    tline = fgets(fid);
    joint_str_p2 = textscan(tline,'%f,%f,%f,%f,%f,%f,%f,%f,%f,%f,%f,%f,%f,%f,%f,%f,%f,%f,%f,%f,%f,%f,%f,%f,%f,%f,%f,%f,%f,%f,%f,%f,%f,%f,%f,%f,%f,%f,%f,%f,%f,%f,%f,%f,%f,%f');
    joint_str_p2(1) = [];
    normalized_joints{cnt}{2} = reshape(joint_str_p2,[3,15])';
    
    cnt = cnt + 1;
    
    tline = fgets(fid);
   
    
end

end

