function plot_skeleton_kinect( joints_2d )
%PLOT_SKELETON_KINECT Summary of this function goes here
%   Detailed explanation goes here

SkeletonConnectionMap = [1 2;
                         2 3;
                         3 10;
                         3 11;
                         2 4;
                         4 5;
                         5 6;
                         2 7;
                         7 8;
                         8 

for i = 1:size(joints_2d,1)
   plot(joints_2d(i,1), joints_2d(i,2), 'r*');
   text(joints_2d(i,1), joints_2d(i,2), num2str(i));
end

end

